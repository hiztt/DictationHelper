<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_buy_achieve_cover"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/book" />

    <TextView
        android:id="@+id/tv_buy_achieve_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_buy_achieve_cover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:text="《数搜索式》"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_buy_achieve_type_name_dura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:text="《数搜索式》X1 (7天有效)"
        android:textColor="#000"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btn_buy_achieve_to_use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_bg_buy_to_use"
        android:text="去使用"
        android:textColor="#fff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_buy_achieve_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="关闭"
        android:textColor="#000" />
</LinearLayout>