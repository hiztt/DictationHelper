<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_sign_out"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2bc39a"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sign_exit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/left_exit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="签到"
            android:textColor="#000"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11.5"
        android:background="#b0f8d3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:background="#fef7cd"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="连续签到"
                        android:textColor="#a1723a"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_sign_day_continue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1天"
                        android:textColor="#f4397b"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="累计签到"
                        android:textColor="#a1723a"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_sign_day_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1天"
                        android:textColor="#f4397b"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#b0f8d3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/linearlayout_corner_calendar"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:id="@+id/choose_date_view"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/last_month"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/left" />

                            <!--android:layout_toLeftOf="@id/scroll_switch"-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:gravity="bottom"
                                android:paddingLeft="4dp"
                                android:text="上一月"
                                android:textColor="#ff9c0e"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/show_year_view"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"

                                android:gravity="bottom"
                                android:text="2014年"
                                android:textColor="#68716b"
                                android:textSize="19.3sp" />

                            <TextView
                                android:id="@+id/show_month_view"
                                android:layout_width="25dp"
                                android:layout_height="match_parent"
                                android:gravity="bottom|center"
                                android:maxLines="1"
                                android:text="11"
                                android:textColor="#68716b"
                                android:textSize="19.3sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:gravity="bottom"
                                android:maxLines="1"
                                android:text="月"
                                android:textColor="#68716b"
                                android:textSize="19.3sp" />
                            <!--android:textColor="#ff25adff"-->
                            <!--android:background="@drawable/button_bg"-->
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/next_month"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="bottom|right"
                            android:orientation="horizontal">

                            <!--android:layout_toLeftOf="@id/scroll_switch"-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:gravity="bottom"
                                android:paddingLeft="4dp"
                                android:paddingRight="5dp"
                                android:text="下一月"
                                android:textColor="#ff9c0e"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/right" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:background="#fff"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="5dp">

                            <TextView
                                style="@style/weekIndicatorStyle"
                                android:text="星期一" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                style="@style/weekIndicatorStyle"
                                android:text="星期二" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                style="@style/weekIndicatorStyle"
                                android:text="星期三" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                style="@style/weekIndicatorStyle"
                                android:text="星期四" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                style="@style/weekIndicatorStyle"
                                android:text="星期五" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                style="@style/weekIndicatorStyle"
                                android:text="星期六" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingRight="5dp">

                            <TextView
                                style="@style/weekIndicatorStyle"
                                android:text="星期日" />
                        </LinearLayout>
                    </LinearLayout>

                    <android.support.design.widget.CoordinatorLayout
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <cn.edu.hebtu.software.listendemo.credit.component.MonthPager
                            android:id="@+id/calendar_view"
                            android:layout_width="match_parent"
                            android:layout_height="270dp"
                            android:background="#fff"></cn.edu.hebtu.software.listendemo.credit.component.MonthPager>
                    </android.support.design.widget.CoordinatorLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#5ad497"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="  签到规则说明"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="     1、每日签到获取5积分"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="     2、只可补签当月，补签消耗2积分"
            android:textColor="#fff"
            android:textSize="14sp" />


    </LinearLayout>


</LinearLayout>
