<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_above"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_addNewWord"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:src="@drawable/addnewword"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_gravity="top"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/iv_import"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/import1" />
                <TextView
                    android:id="@+id/tv_wordEnglish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="zoo"
                    android:textColor="#000"
                    android:textSize="35dp" />

                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/iv_trumpet"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:src="@drawable/trumpet" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:layout_marginTop="40dp">
                <ImageView
                    android:id="@+id/iv_wordImg"
                    android:src="@drawable/word"
                    android:layout_centerHorizontal="true"

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!--<ImageView
                android:id="@+id/iv_trumpet"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/trumpet" />-->

            <!--<TextView
                android:id="@+id/tv_wordEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="zoo"
                android:textSize="24dp" />-->

            <TextView

                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_wordChinese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动物园"
                android:textSize="20dp"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>