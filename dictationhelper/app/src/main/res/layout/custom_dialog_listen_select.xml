<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="听写选项卡"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_listen_select_import"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_listen_select"
            android:text="重点"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/btn_listen_select_all"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_listen_select_normal"
            android:text="全部"
            android:textSize="16dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_listen_select_order"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_listen_select"
            android:text="顺序"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/btn_listen_select_outOrder"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_listen_select_normal"
            android:text="乱序"
            android:textSize="16dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_listen_select_app"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_listen_select"
            android:text="app听写"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/btn_listen_select_paper"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_listen_select_normal"
            android:text="纸质听写"
            android:textSize="16dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/btn_listen_select_listen"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="开始听写"
            android:textSize="16dp"
            android:background="@drawable/btn_invalid"/>

    </LinearLayout>


</LinearLayout>