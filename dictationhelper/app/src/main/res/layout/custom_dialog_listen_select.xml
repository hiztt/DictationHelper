<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@drawable/select4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="听写选项卡"
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_listen_select_import"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_listen_select"
                android:text="重点"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_listen_select_all"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_listen_select_normal"
                android:text="全部"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_listen_select_order"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_listen_select"
                android:text="顺序"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_listen_select_outOrder"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_listen_select_normal"
                android:text="乱序"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_listen_select_app"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_listen_select"
                android:text="app听写"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_listen_select_paper"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_listen_select_normal"
                android:text="纸质听写"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_listen_select_listen"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_invalid"
                android:text="开始听写"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>