            <!--android:textColor="#fff"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="张"/>-->
            <!--</LinearLayout>-->

            <TextView
                android:id="@+id/tv_credit_bag_usetv_credit_bag_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去使用"
                android:textColor="#fff"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>