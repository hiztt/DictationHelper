<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_result_item_show"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#9AFAEBA7">

        <TextView
            android:id="@+id/tv_result_item_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="14dp"
            android:text="apple" />

        <TextView
            android:id="@+id/tv_result_item_chinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_alignParentBottom="true"
            android:textSize="14dp"
            android:text="苹果" />

        <ImageView
            android:id="@+id/iv_result_item_right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/result_right"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_result_item_your"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#998EF1BB"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:paddingLeft="15dp"
        android:text="abble"
        android:textColor="#000"
        android:textSize="14dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/dash_line"/>

</LinearLayout>