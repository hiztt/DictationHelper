<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="240dp"
    android:orientation="vertical"
    android:id="@+id/ll_fragment_host_out">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:minHeight="180dp">

        <ImageView
            android:id="@+id/iv_host_rec_item_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/img1" />

        <ImageView
            android:id="@+id/iv_host_rec_item_collect"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/collect_no" />

        <ImageView
            android:id="@+id/iv_host_rec_item_bind"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/bind_no" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_host_rec_item_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:maxEms="10"
        android:maxLines="1"
        android:text="新概念小学三年级上"
        android:textColor="#000"
        android:textSize="11dp" />
</LinearLayout>