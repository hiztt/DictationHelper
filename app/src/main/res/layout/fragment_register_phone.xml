<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_login_register_phone_exit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/left_exit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#000"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="登陆后即代表阅读并同意"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_login_regist_read_sla"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="服务协议"
            android:textColor="#00B0FF"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="和"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_login_regist_read_secret"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="隐私政策"
            android:textColor="#00B0FF"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <EditText
                    android:id="@+id/et_login_regist_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:focusedByDefault="true"
                    android:hint="输入手机号"
                    android:inputType="number"
                    android:maxEms="11"
                    android:maxLines="1"
                    android:textColor="#000" />

                <ImageView
                    android:id="@+id/iv_login_regist_clean_phone"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/cancel" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_regist_phone_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户已被注册"
                android:textColor="#C62828"
                android:visibility="gone" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/et_login_regist_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:maxEms="12"
                android:maxLines="1"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/iv_login_regist_clean_password"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/cancel" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <EditText
                    android:id="@+id/et_login_regist_re_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:hint="重新输入密码"
                    android:inputType="textPassword"
                    android:maxEms="12"
                    android:maxLines="1"
                    android:textColor="#000" />

                <ImageView
                    android:id="@+id/iv_login_regist_clean_re_password"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/cancel" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_regist_re_pwd_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="两次输入密码不一致:"
                android:textColor="#AC2D2D"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_regist_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/registable_button_border"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="20dp" />
</LinearLayout>